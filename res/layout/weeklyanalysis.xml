<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:focusable="true" 
	android:focusableInTouchMode="true" >
    <LinearLayout
    android:id="@+id/linearlayout_back1"
	android:orientation="vertical"
	android:background="@drawable/up_background"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1">
	    //北进口上游
		<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="240dp"
		android:layout_marginTop="30dp">
			<Button android:id="@+id/button_41751051" 
		    android:layout_width="40dp"
			android:layout_height="20dp"
			android:background="@drawable/button_blue"/>
			<Button android:id="@+id/button_41751052" 
			android:layout_marginLeft="5dp"
		    android:layout_width="25dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
		</LinearLayout>
		//北进口
		<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="240dp"
		android:layout_marginTop="47dp">
			<Button android:id="@+id/button_41951011" 
		    android:layout_width="40dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
			<Button android:id="@+id/button_41951012" 
			android:layout_marginLeft="5dp"
		    android:layout_width="25dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
		</LinearLayout>
		<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="240dp"
		android:layout_marginTop="215dp">
			<Button android:id="@+id/button_43151051" 
		    android:layout_width="40dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
			<Button android:id="@+id/button_43151052" 
			android:layout_marginLeft="5dp"
		    android:layout_width="25dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
		</LinearLayout>
		//南进口
		<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="315dp"
		android:layout_marginTop="28dp">
			<Button android:id="@+id/button_41951032" 
		    android:layout_width="25dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
			<Button android:id="@+id/button_41951031" 
			android:layout_marginLeft="5dp"
		    android:layout_width="40dp"
			android:layout_height="20dp"
            android:background="@drawable/button_yellow"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
    android:id="@+id/linearlayout_back2"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:background="@drawable/down_background"
	android:layout_height="fill_parent"
	android:layout_weight="1">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:singleLine="true"
		        android:layout_marginLeft="35dp"
		        android:text="请选择起始时间："
		        android:textColor="#000000"
		        android:textSize="20dp" />  
			<TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:singleLine="true"
		        android:layout_marginLeft="25dp"
		        android:text="请选择线圈号："
		        android:textColor="#000000"
		        android:textSize="20dp" />  
		    <TextView
		        android:id="@+id/TextView_Show"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:textSize="20dp"
		        android:text="请选择终止时间："
		        android:textColor="#000000"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		    <EditText 
		        android:id="@+id/edittext_start_time"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="4dp"
		        android:layout_marginLeft="35dp"/>
		    <Spinner
		        android:id="@+id/spinner_circle_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="65dp"/>
		    <EditText 
		        android:id="@+id/edittext_end_time"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="4dp"
		        android:layout_marginLeft="50dp"/>
		</LinearLayout>
		<Button android:id="@+id/button_search" 
		    android:layout_width="400dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="查询"/>
    </LinearLayout>
</LinearLayout>
